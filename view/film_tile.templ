package view

import (
    "fmt"
    "github.com/bangau1/golang-htmx/film"
)

templ FilmTile(film film.Film) {
  <div class="bg-gray-100 rounded overflow-hidden shadow-sm">
    <img 
      href={ fmt.Sprintf("/films/%s", film.Id) }
      class="w-full h-48 object-cover" src={ film.PosterURL } alt="Movie poster"/>
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2">{ film.Title } </div>
      <p class="text-gray-700 text-base">{ film.Director }</p>
    </div>
  </div>
}
